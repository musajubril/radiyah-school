include ../mixins/button.jade
include ../mixins/input.jade
include ../mixins/modal.jade
include ../mixins/studentForm.jade

extends ../layout
block content
    .bg-white.shadow.rounded-lg.p-8
        .flex.justify-between.items-center
            p.text-3xl Students 
            +button("Add Student",'button', 'open')
        .mt-10.flex.flex-col.gap-5
            .grid.grid-cols-5.border-b.pb-2.font-bold
                .text-left Full Name
                .text-left Age
                .text-left Gender
                .text-left Class
                .text-left Mobile Number
            each student in students
                .grid.grid-cols-5.border-b.pb-2
                    .text-left= student.full_name
                    .text-left= student.age
                    .text-left= student.gender
                    .text-left= student.class
                    .text-left= student.mobile_number

    script(src="/js/student-modal.js") 

    +modal('myModal', 'Add Student')
        +studentForm()