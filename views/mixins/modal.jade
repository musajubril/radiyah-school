mixin modal(id, title, bodyContent)
  .fixed.inset-0.bg-black.bg-opacity-50.hidden.items-center.justify-center.z-50(id=id)
    .bg-white.rounded-lg.shadow-xl.p-6.w-full.max-w-lg#modalBody
      .flex.justify-between.items-center
        h2.text-lg.font-semibold= title
        button.text-xl.font-bold.text-gray-500.bg-transparent.border-none.cursor-pointer.modal-close(class="hover:text-gray-800", id="close") &times;
      .py-4
        block
